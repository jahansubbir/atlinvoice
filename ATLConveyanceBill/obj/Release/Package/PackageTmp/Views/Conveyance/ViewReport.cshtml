@using ATLConveyanceBill.Models

@{
    ViewBag.Title = "ViewReport";
}
<br />
<br />
<br />
<br />

<h2>Generate Report</h2>
<div>
    <form method="POST">
        <table>
            <tr>
                <td><label>From</label></td>
                <td><input type="text" id="DateFrom" name="From"/></td>
                <td><label>To</label></td>
                <td><input type="text" id="DateTo" name="To"/></td>
                <td><label>Of</label></td>
                <td>
                    <select id="EmployeeId" name="EmployeeId">
                        <option>Select</option>
                        @foreach (Employee employee in ViewBag.Employees)
                        {
                            <option value="@employee.Id">@employee.Name</option>
                        }
                    </select>
                </td>
            </tr>
            <tr><td>
                <label></label>
            </td></tr>
            <tr>
                <td>
                    <label></label>
                </td>
            </tr>
            <tr>
               
                <td style="align-content: flex-end"><input type="checkbox" id="Check" name="Check" value="true"/></td>
                <td><label>Unchecked</label></td>

                <td><input type="checkbox" id="Approve" name="Approval" value="true"/></td>
                <td><label>Denied</label></td>

                <td><input type="checkbox" id="Pay" name="Pay" value="true"/></td>
                <td><label>Unpaid</label></td>
                
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="View" id="Submit" /></td>
            </tr>
        </table>
    </form>
</div>
@section scripts{

    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery-ui.min.js"></script>
    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.13/css/jquery.dataTables.min.css"/>

    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <script>
        $(function() {
            $("#DateFrom").datepicker({ dateFormat: 'dd-M-yy' });
            $("#DateTo").datepicker({ dateFormat: 'dd-M-yy' });
            //$("#DateFrom2").datepicker({ dateFormat: 'dd-M-yy' });
            //$("#DateTo2").datepicker({ dateFormat: 'dd-M-yy' });
        });
    </script>

    <script>
        $(function() {
            $("#BillTable").dataTable();

        })

    </script>

}