<link href="~/Content/bootstrap-datepicker.min.css" rel="stylesheet" />
@section scripts{
    @*<script src="~/Scripts/jquery-3.1.1.min.js"></script>*@
    <script src="~/Scripts/bootstrap-datepicker.min.js"></script>
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function() {
            $("#tableBody").hide();
            $("#DateFrom").datepicker({
                format: "dd-MM-yyyy",
                autoclose: true,
                todayHighlight: true,
                endDate: "Today",
                maxViewMode: 1,
                orientation: "bottom right"
            });
            $("#DateTo").datepicker({
                format: "dd-MM-yyyy",
                autoclose: true,
                todayHighlight: true,
                endDate: "Today",
                maxViewMode: 1,
                orientation: "bottom right"
            });
        });
    </script>
    <script>
        function ajaxCall(url) {
            $("#tableBody").empty();
            //var employeeId = $("#EmployeeId").val();
            var dateFrom = $("#DateFrom").val();
            var dateTo = $("#DateTo").val();
            var empId = $("#EmployeeId").val();
            var json = {
                //empId: employeeId,
                fromDate: dateFrom,
                toDate: dateTo,
                empId: empId
            };
            $.ajax({
                type: "POST",
                url: url@*'@Url.Action("ViewLog", "Conveyance")'*@,
                //url: '/Conveyance/ViewLog',
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify(json),
                success: function(data) {
                    // alert(data.Name);
                    $("#tableBody").show();
                    $.each(data, function (key, value) {
                        var rawDate = value.Date;
                        var epochDate = rawDate.substring(6, rawDate.length - 2);
                        //alert(rawDate);
                        // alert(epochDate);
                        var myDate = new Date(epochDate * 1);
                        $("#tableBody").append('<tr><td>' + myDate.toLocaleDateString() + '</td><td>' + value.Name + '</td><td>' + value.EmpId + '</td><td>' + value.Project + '</td><td>' + value.WorkSystem + '</td><td>' + value.WorkType + '</td><td>' + value.Description + '</td></tr>');
                    });
                    $("#logTable").dataTable();

                }

            });
        }
    </script>
    <script>
        $(document).ready(function() {
            $("#DateFrom").change(function() {
                ajaxCall('@Url.Action("ViewLog", "Conveyance")');
            });
            $("#DateTo").change(function() {
                ajaxCall('@Url.Action("ViewLog", "Conveyance")');
            });
        })
    </script>
    <script>
        $(document).ready(function() {
            $("#DateFrom").change(function() {
                ajaxCall('@Url.Action("ViewSpecificLog","Conveyance")');
            });
            $("#DateTo").change(function() {
                ajaxCall('@Url.Action("ViewSpecificLog","Conveyance")');
            });
            $("#EmployeeId").change(function() {
                ajaxCall('@Url.Action("ViewSpecificLog","Conveyance")');
            });
        });
    </script>


